<div class="col-md-8 co-centered">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <h3>求職列表
          <div class="dropdown clearfix pull-right">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              排 序
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("按薪資下限排序", jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
                <%= link_to("按薪資上限排序", jobs_path(:order => "by_upper_bound")) %>
              </li>
              <li>
                <%= link_to("按發表時期排序", jobs_path) %>
              </li>
            </ul>
          </div>
        </h3>
      </div>
    </div>

    <div class="panel-body">
      <table class="table table-boldered">
        <thead>
          <tr>
            <td>職缺</td>
            <td>薪資下限</td>
            <td>薪資上限</td>
            <td>刊登時間</td>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td>
              <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
              <%= job.wage_lower_bound %>
            </td>
            <td>
              <%= job.wage_upper_bound %>
            </td>
            <td>
              <%= job.created_at %>
            </td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
